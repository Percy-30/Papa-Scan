<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado presionado (cuando se hace clic) -->
    <item android:color="@color/colorDeepGreen" android:state_pressed="true" />

    <!-- Estado activado o seleccionado -->
    <item android:color="@color/colorDeepGreen" android:state_selected="true" />
    <item android:color="@color/colorDeepGreen" android:state_checked="true" />

    <!-- Estado por defecto -->
    <item android:color="@color/colorRedBright" />
</selector>